@model FeaturesViewModel

@{
    ViewData["Title"] = "Home Page";
}

<h1>Features</h1>

<b>Controllers:</b>
<div class="pre-scrollable" style="max-height:100px">
    <ul>
        @foreach (var item in Model.Controllers)
        {
            <li>@item.Name</li>
        }
    </ul>
</div>

<b>Metadata References:</b>
<div class="pre-scrollable" style="max-height: 100px">
    <ul>
        @foreach (var item in Model.MetadataReferences)
        {
            <li>@item.Display</li>
        }
    </ul>
</div>

<b>Tag Helpers:</b>
<div class="pre-scrollable" style="max-height: 100px">
    <ul>
        @foreach (var item in Model.TagHelpers)
        {
            <li>@item.Name</li>
        }
    </ul>
</div>
<b>View Components:</b>
<div class="pre-scrollable" style="max-height: 100px">
    <ul>
        @foreach (var item in Model.TagHelpers)
        {
            <li>@item.Name</li>
        }
    </ul>
</div>

<b>Routes</b>
<div class="pre-scrollable" style="max-height: 100px">
    <ul>
        @foreach (var item in Model.Routes)
        {
            <li>@item</li>
        }
    </ul>
</div>

<form asp-controller="Home" asp-action="RemovePlugin" method="post">
    <button type="submit">Submit</button>
</form>
